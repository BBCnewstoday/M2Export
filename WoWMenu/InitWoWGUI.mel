	string $nodes[] = `ls -sl -dag -type "joint"`;
	if(size($nodes) == 0){
		print("No joint selected.\n");
	}
	for($node in $nodes){
		//TODO add attributes to $node
		print("Adding attributes to Joint " + $node+"\n");
	}
